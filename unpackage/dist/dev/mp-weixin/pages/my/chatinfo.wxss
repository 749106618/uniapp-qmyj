.wwiapp-chat-con .dl .dt image {max-width: 80rpx;max-height: 80rpx;border-radius: 100%;}
.wwiapp-chat-con .dl.msg-other .dt {left: 16rpx;}
.wwiapp-chat-con .dl.msg-me .dt {right: 16rpx;}
.wwiapp-chat-con .dl .dd {display: block;max-width: 375rpx;padding: 16rpx 24rpx;border-radius: 16rpx;min-height: 36rpx;font-size: 28rpx;line-height: 36rpx;color: #000;word-wrap: break-word; position: relative;}
