.wwiapp-chat-con .dl {position: relative;min-height: 88rpx;padding: 8rpx 0;margin-bottom:8rpx;overflow: hidden;}
.wwiapp-chat-con .dl.msg-other {animation: optionMsgLeft 0.5s ease-in-out;-webkit-animation: optionMsgLeft 0.5s ease-in-out;}
@keyframes optionMsgLeft {from {opacity: 0.5;left: -100%;right: 100%;}to {opacity: 1;left: 0;right: 0;}}
