.wwiapp-chat-con .dl.msg-me .dd:after{border-color: transparent transparent transparent #FFD779;border-style: dashed dashed  dashed solid; right: -28rpx;}
.wwiapp-chat-con .dl.msg-other .dd:after{border-color: transparent #FFFFFF transparent transparent ;border-style: dashed solid dashed  dashed ; left: -28rpx;}
.wwiapp-chat-con .dl .dd image {background: #FFF;max-width: 320rpx;max-height: 320rpx;padding: 8rpx;border-radius: 12rpx;vertical-align: text-bottom;margin: 0 8rpx;}
.wwiapp-chat-con .dl.msg-other .dd {margin-left: 120rpx;float: left;background-color: #FFF;}
