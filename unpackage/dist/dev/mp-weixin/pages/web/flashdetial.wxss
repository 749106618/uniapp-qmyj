
page{background: #FFFFFF;}
.wwi-banner image{width: 100%;}
.time-count{color: #6d6d6d; width: 100%;}
.time-count .title{font-size: 24rpx;}
.time-count .time{position: relative; height: 40rpx;}
.time-count .time:after{content: ''; width: 100%; height: 1px; background: #eee;position: absolute; top: 50%; z-index: 0;}
.goods-list{-webkit-flex-wrap: wrap;-ms-flex-wrap: wrap;flex-wrap: wrap;}
.goods-list .li{width: 375rpx; background: #FFFFFF; border-top:1px solid #eee ; -webkit-box-sizing: border-box; box-sizing: border-box; overflow: hidden;}
.goods-list .li:nth-child(even){border-left:1px solid #eee ;}
.goods-list .li .image{width: 335rpx; height: 335rpx; margin: 20rpx;}
.goods-list .li .image image{width: 335rpx;}
.goods-list .li .goods-info{margin: 20rpx;}
.goods-list .li .goods-info .goods-title{font-size: 26rpx; line-height: 34rpx; max-height: 68rpx; overflow: hidden;-o-text-overflow: ellipsis;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;white-space: normal;}
.goods-list .li .goods-info .goods-price{font-size: 28rpx; color: #333;}
.goods-list .li .goods-info .goods-price .span{color: #FF0036; border: 1px solid #FF0036; font-size: 24rpx;}
.goods-list .li .goods-info .goods-price .em{}
.goods-list .li .goods-info .goods-price .i{text-decoration: line-through; color: #8c8c8c; font-size: 24rpx; margin-left: 10rpx;}

