
page{background: #F8F8F8;}
.order-content{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;  width: 100%; height: 100%; -webkit-box-orient: vertical; -webkit-box-direction: normal; -webkit-flex-direction: column; -ms-flex-direction: column; flex-direction: column;}
.order-content .top-nav{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;  width: 100%; border-bottom: 1px solid #F8F8F8; background: #FFFFFF;}
.order-content .top-nav .hd{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex;-webkit-box-orient: horizontal;-webkit-box-direction: normal;-webkit-flex-direction: row;-ms-flex-direction: row;flex-direction: row; height: 44px;
}
.order-content .top-nav .li{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;-webkit-box-align: center;-webkit-align-items: center;-ms-flex-align: center;align-items: center; -webkit-box-pack: center; -webkit-justify-content: center; -ms-flex-pack: center; justify-content: center; display: -webkit-box; display: -webkit-flex; display: -ms-flexbox; display: flex;}
.order-content .top-nav .li .p{ line-height: 42px; height: 42px; color: #232326; font-size: 15px;}
.order-content .top-nav .li.on .p{border-bottom:2px solid #F23030; color:#F23030;}
.order-main{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;  height: calc(100% - 44px);position: relative;}
.wwiapp-goods-list{font-size: 28rpx;}
.wwiapp-goods-list .li{background: #FFFFFF; padding: 20rpx;}
.wwiapp-goods-list .li .hd .goods-img{width: 120rpx;}
.wwiapp-goods-list .li .hd .info{margin-left: 20rpx; -webkit-box-flex: 1; -webkit-flex: 1; -ms-flex: 1; flex: 1;}
.wwiapp-goods-list .li .hd .info .goods-name{line-height: 45rpx; height: 90rpx; overflow: hidden;}
.wwiapp-goods-list .li .hd .goods-subtotal{margin-left: 10rpx;}
.wwiapp-goods-list .li .hd .goods-subtotal .goods-price{color: #FF0036; font-size: 32rpx;  font-weight: 600; -webkit-box-align: baseline; -webkit-align-items: baseline; -ms-flex-align: baseline; align-items: baseline;}
.wwiapp-goods-list .li .hd .goods-subtotal .goods-price .em{font-size: 24rpx;}
.wwiapp-goods-list .li .hd .goods-subtotal .goods-strong{display: -webkit-box;display: -webkit-flex;display: -ms-flexbox;display: flex; -webkit-box-pack: center; -webkit-justify-content: center; -ms-flex-pack: center; justify-content: center; background:#F8F8F8; border-radius:15rpx; color: #999999;}
.wwiapp-goods-list .li .bd{border-top:1px solid #F8F8F8; margin-top: 20rpx; padding-top: 20rpx;}
.wwiapp-goods-list .li .bd .add-ime{color: #888888;}
.wwiapp-goods-list .li .bd .btn{}
.wwiapp-goods-list .li .bd .btn .span{background: #F8F8F8; margin-left: 15rpx; padding:0 15rpx;}
.wwiapp-goods-list .li .bd .btn .span.edit{background: #03a9f4; color: #FFFFFF;}
.wwiapp-goods-list .li .bd .btn .span.del{background: #f44336; color: #FFFFFF;}
.wwiapp-goods-list .li .bd .btn .span.offline{background: #00bcd4; color: #FFFFFF;}

