
page{background: #F8F8F8;}
.goods-form{padding: 20rpx; font-size: 28rpx;}
.goods-form .goods-input-one{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;}
.goods-form .goods-input-one .title{font-size: 30rpx;}
.goods-form .goods-input-one .input{background: #FFFFFF;}
.goods-form .goods-input-one .input input{padding: 10rpx 20rpx;}
.goods-form .goods-input-one .input input:disabled{background: #F8F8F8;}
.goods-form .goods-input-one .input textarea{line-height: 40rpx; padding: 20rpx; width: auto;}
.class-nav{background: #FFFFFF; height: 88rpx;}
.class-nav .step{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1; position: relative; font-size: 28rpx;}
.class-nav .step.now{color: #00bcd4}
.class-nav .step.now:after{content: '';font-family:"wwi-icon"; height: 4rpx; background: #00bcd4; width: 50%; position: absolute; bottom: 0;}
.class-select{background: #FFFFFF; padding: 20rpx;}
.class-select .item{margin-right: 20rpx; margin-bottom: 20rpx;}
.g-img .solids{width: 118rpx; height: 118rpx; border: 4rpx solid #eee;}
.g-img .solids .wwi-icon{font-size: 88rpx; color: var(--grey);}
.g-img .bg-img {background-size: cover;background-position: center;background-repeat: no-repeat; width: 118rpx; height: 118rpx; margin-right: 20rpx; position: relative;}
.g-img .bg-img:last-child{margin-right: 0;}
.g-img .bg-img .cu-tag {position: absolute;right: 0;top: 0;border-bottom-left-radius: 3rpx;padding: 6rpx 12rpx;height: auto;background-color: rgba(0, 0, 0, 0.5);
}
.g-img .bg-img .cu-tag .wwi-icon{font-size: 24rpx;}

