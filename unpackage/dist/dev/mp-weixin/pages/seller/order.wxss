.s-dialog-content .s-dialog-btn .confirm-btn{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1; color: #00BCD4;}
.other-msg{background: #F8F8F8; padding: 15rpx; font-size: 24rpx;}
.lice-msg{-webkit-flex-wrap: wrap;-ms-flex-wrap: wrap;flex-wrap: wrap;}
.lice-msg .span{background: #F8F8F8; padding: 2.5rpx 10rpx; border-radius:15rpx; margin-right: 15rpx; margin-bottom: 15rpx; color: #9e9e9e;}
.lice-msg .span.cur{border: 1px dotted #00BCD4; color: #00BCD4;}
.edit-price{font-size: 28rpx;}
.edit-price .e-list{margin-bottom: 10rpx;}
