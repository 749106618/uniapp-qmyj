
.bill-list{width: auto;-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;  white-space: nowrap;}
.bill-list .bill-list-main{width: 100%;}
.bill-list .bill-list-main .hd{ background: #F8F8F8; width: 100%; height: 100rpx;}
.bill-list .sp{width: 300rpx; display: inline-block; text-align: center;}
.bill-list .sp.time{width: 450rpx;}
.bill-list .sp.paytime{width: 380rpx;}
.bill-list .bill-list-main .hd .sp{font-size: 28rpx; font-weight: 600; background: #F8F8F8; height: 100rpx; line-height: 100rpx;}
.bill-list .bill-list-main .bd .li{ font-size: 28rpx;height: 80rpx;}
.bill-list .bill-list-main .bd .li .sp{line-height: 80rpx; height: 80rpx;}
.bill-list .bill-list-main .bd .li:nth-child(even) .sp{background: #eaf6fb;}

