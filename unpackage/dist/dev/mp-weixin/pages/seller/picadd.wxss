
.pubedit-adv image{width: 100%; height: auto;}
.pubedit-from{}
.pubedit-from .list{padding: 20rpx; background: #FFFFFF;}
.pubedit-from .list .border-top{border-top:1px solid #F8F8F8 ;}
.pubedit-from .pubedit-input{line-height: 80rpx; width: 100%;}
.pubedit-from .pubedit-input label{ width: 150rpx; color: #666;}
.pubedit-from .pubedit-input .inp{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;line-height: 80rpx;}
.pubedit-from .pubedit-input .inp.disabled{color: #999;}
.pubedit-from .pubrate{background: #2CB476; color: #fff; height: 50rpx; border-radius: 50rpx; padding: 0 15rpx; margin:15rpx 0;}
.pubedit-from .pubedit-input .inp .pic{width: 80rpx; height: 80rpx; position: relative; border: 2rpx solid #FF0000;}
.pubedit-from .pubedit-input .inp image{width: 80rpx; height: 80rpx;}
.pubedit-from .pubedit-input .inp .pic .wwi-icon{position: absolute; top: -15rpx; right: -15rpx; background: #FF0000; font-size: 28rpx; color: #fff; border-radius: 100rpx;
}
.pubedit-from .pubedit-input .inp .select{font-size: 24rpx;width: 180rpx;  -webkit-box-align: center;  -webkit-align-items: center;  -ms-flex-align: center;  align-items: center;}
.pubedit-from .pubedit-input .inp .select .wwi-icon-danxuanweixuanzhong{color: #ccc;}
.pubedit-from .pubedit-input .inp .select .wwi-icon-danxuanxuanzhong{color: #2CB476;}
.pubedit-from .pubedit-input .inp .sel-li{padding: 0 20rpx; margin-bottom: 20rpx; margin-right: 20rpx; line-height: 60rpx; border: 1px solid transparent; border-radius: 60rpx;}
.pubedit-from .pubedit-input .inp .sel-li.ok{border-color: #2CB476; color: #2CB476;}
.pubedit-from .pubedit-input .inp .selec .lb{width: auto;line-height: 50rpx;}
.pubedit-from .pubedit-input .inp .selec .lp{border: 1px solid transparent; padding: 5rpx 20rpx; margin-right:20rpx; margin-bottom: 20rpx; color: #333;}
.pubedit-from .pubedit-input .inp .selec .lp.ck{color: #2CB476; border-color: #2CB476 ; border-radius: 20rpx;}
.pubedit-from .pubedit-input .inp .picList{border-bottom: 1px dashed #F8F8F8;}
.pubedit-from .pubedit-input .inp .picList .sli{}
.pubedit-from .pubedit-input .inp .picList .sli image{width: 100rpx; height: 100rpx; border: 1px solid #F8F8F8; margin-right: 20rpx;}
.pubedit-from .pubedit-input .inp .picList .sli .text{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1; width: auto; height: 60rpx;  border: 1px solid #F8F8F8; padding: 20rpx; font-size: 24rpx;}
.pubedit-from .pubedit-input .inp .picList .sbtn{ color: #999; font-size: 24rpx;}
.pubedit-from .pubedit-input .inp .picList .sbtn .sbtn-li{margin-right: 20rpx;}
.pubedit-from .pubedit-input .inp .picList .sbtn .sbtn-li .wwi-icon{font-size: 40rpx;}
.pubedit-from .pubedit-input .inp .picList .sbtn .sbtn-li.ok{color: #2CB476;}
.pubedit-from .pubedit-input .inp .addPic{padding:0 20rpx; color: #ffffff; background: #2CB476; width: 150rpx; line-height: 60rpx; text-align: center; margin-top: 20rpx;}
.pubedit-from .pubedit-input .upload{width: 120rpx; color: #2CB476;}
.btn-area{background: #FFFFFF;padding: 20rpx;}
.btn-area .btn-s{background: #2CB476; color: #FFFFFF;}


