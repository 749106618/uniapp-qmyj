.goods-list .item .goods-info .g-price .i{font-size: 24rpx;}
.goods-list .item .goods-info .skill-price .oldprice{color: #777; text-decoration: line-through; font-size: 24rpx;}
.goods-list .item .goods-info .skill-lod{font-size: 24rpx;-webkit-box-align: center;-webkit-align-items: center;-ms-flex-align: center;align-items: center; color: #777;}
.goods-list .item .goods-info .skill-lod .span{width: 140rpx; margin-left: 20rpx;}
.endTime{color: #fff; font-size: 24rpx;}

