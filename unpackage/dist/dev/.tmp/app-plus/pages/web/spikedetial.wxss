
.skill-ban image{width: 100%; vertical-align: middle;}
.goods-list{background: #fff; padding: 20rpx;}
.goods-list .item{padding: 20rpx 0; border-bottom: 1px solid #eee;}
.goods-list .item .skill-pic{width: 180rpx; height: 180rpx;}
.goods-list .item .skill-pic image{width: 180rpx; height: 180rpx;}
.goods-list .item .goods-info{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1; margin-left: 20rpx;}
.goods-list .item .goods-info .goods-title{height: 80rpx;overflow: hidden;font-size: 30rpx;color: #252525;line-height: 40rpx;margin-bottom: 10rpx;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;}
