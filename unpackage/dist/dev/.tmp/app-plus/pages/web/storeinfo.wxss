
page{background: #F8F8F8;}
.wwiapp-store-info{padding: 20rpx; background: #FFFFFF;}
.wwiapp-store-info .store-avatar{width: 150rpx; height: 150rpx; border: 1px solid #ddd; padding: 10rpx; border-radius:20rpx;}
.wwiapp-store-info .store-avatar image{width:150rpx; height: 150rpx;}
.wwiapp-store-info .store-base{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1; margin-left: 20rpx;}
.wwiapp-store-info .store-base .title{font-size: 34rpx; margin-bottom: 10rpx;}
.wwiapp-store-info .store-base .class{font-size: 26rpx;}
.wwiapp-store-info .store-base .type{height: 40rpx;padding: 0 8rpx;font-size: 24rpx;line-height: 40rpx;background-color: #ED5564;color: #FFF;border-radius: 6rpx; display: initial;}
.wwiapp-store-info .store-collect{}
.wwiapp-store-info .store-collect .btn{background: #FF0036; color: #FFFFFF; font-size: 28rpx; display: initial; padding: 5rpx 18rpx; border-radius:24rpx;}
.wwiapp-store-info .store-collect .btn.ok{background: #DDDDDD;}
.wwiapp-store-info .store-collect .span{font-size: 24rpx;}
.wwiapp-store-block{background-color: #FFF;border-bottom: solid 1px #EEE;border-top: solid 1px #EEE;margin-top: 20rpx;}
.wwiapp-store-block .credit,.wwiapp-store-block .ul{padding: 10rpx 0 10rpx 20rpx;}
.wwiapp-store-block .credit .li{min-height: 40rpx;padding: 10rpx 0;line-height:40rpx;white-space: nowrap;}
.wwiapp-store-block .ul .li{min-height: 40rpx;padding: 20rpx 0;line-height: 40rpx;white-space: nowrap; display: -webkit-box; display: -webkit-flex; display: -ms-flexbox; display: flex; -webkit-box-orient: horizontal; -webkit-box-direction: normal; -webkit-flex-direction: row; -ms-flex-direction: row; flex-direction: row;}
.wwiapp-store-block .credit .li .h4,.wwiapp-store-block .ul .li .h4{font-size: 28rpx; color: #777; width: 130rpx;}
.wwiapp-store-block .credit .li .span{font-size: 28rpx; margin-left: 28rpx; -webkit-box-flex: 1; -webkit-flex: 1; -ms-flex: 1; flex: 1; color: #FF0036;}
.wwiapp-store-block .ul .li .span{font-size: 28rpx; margin-left: 28rpx; -webkit-box-flex: 1; -webkit-flex: 1; -ms-flex: 1; flex: 1;}
.wwiapp-store-block .credit .li .span.low { color: #48CFAE;}
.wwiapp-store-block .credit .li .span .strong{margin-right: 30rpx;}
.wwiapp-store-block .credit .li .span .em{margin-left: 30rpx;}

