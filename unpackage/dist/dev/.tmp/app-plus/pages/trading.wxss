.wwi-trading-nav .li .span{font-size: 26rpx; margin-top: 10rpx; text-align: center;}
.wwi-trading-nav .li.ok .wwi-icon{background: #d6edeb;}
.wwi-trading-nav .li .wwi-icon{background: #e5e5e5;}
.trading-select-bar{padding: 20rpx; background: #FFFFFF;}
.trading-select-bar .list-main{ border: 2rpx solid #F8F8F8; border-right:0 ; width: 706rpx;}
.trading-select-bar .list-main .li{width: 177rpx; -webkit-box-sizing: border-box; box-sizing: border-box; height: 80rpx; display: -webkit-box; display: -webkit-flex; display: -ms-flexbox; display: flex; -webkit-box-pack: center; -webkit-justify-content: center; -ms-flex-pack: center; justify-content: center; -webkit-box-align: center; -webkit-align-items: center; -ms-flex-align: center; align-items: center; border-right: 2rpx solid #F8F8F8;border-bottom: 2rpx solid #F8F8F8; font-size: 26rpx;}
