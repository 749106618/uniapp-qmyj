.trading-list .li .li-left .pate-oauth{border-top: 4rpx solid #e9f7f1;font-size: 28rpx;line-height: 32rpx;max-height: 64rpx; overflow: hidden; color: #adadad;padding-top: 20rpx;}
.trading-list .li .li-left .pate-store{color: #00a8c1; margin-right: 20rpx;}
.trading-list .li .li-right{}
