.trading-list{margin: 20rpx;}
.trading-list .li{background: #FFFFFF; padding:40rpx 30rpx; border-radius: 20rpx; margin-bottom: 20rpx;}
.trading-list .li .li-left{width: 500rpx;}
.trading-list .li .li-left .title{font-size: 32rpx;line-height: 38rpx;max-height: 76rpx;overflow: hidden;-o-text-overflow: ellipsis;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;white-space: normal; font-weight: bold;}
