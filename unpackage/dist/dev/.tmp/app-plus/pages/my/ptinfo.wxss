.puzzle-goto .goto-btn{width: 50%; font-size: 28rpx; color: #fff; background: #EC5464; border-radius: 8rpx; display:block; height: 70rpx; line-height: 70rpx; text-align: center;border:1px #EC5464 solid; margin:8rpx auto
}
.puzzle-record{margin-top:24rpx; background: #fff; position: relative; z-index: 1;
}
.puzzle-record .h5{ height:32rpx; line-height: 32rpx; padding:15rpx; color: #999; border-bottom: 1px #e4e4e4 solid; font-size: 26rpx;}
.puzzle-record .ul .li{ overflow: hidden; border-bottom:1px #e4e4e4 solid; padding:15rpx;
}
.puzzle-record .ul .li:last-child{ border-bottom:0;
}
.puzzle-record .ul .li .record-img{width: 70rpx; height: 70rpx;
}
.puzzle-record .ul .li .record-img image{height: 70rpx; width: 70rpx; border-radius: 50%;}
