.puzzle-record .ul .li .record-text .p{ font-size: 24rpx;line-height: 35rpx;color: #999; -o-text-overflow: ellipsis; text-overflow: ellipsis; overflow: hidden; white-space: nowrap;}
.puzzle-record .ul .li .record-text .p .em{ color: #999; margin-right:8rpx;
}
.puzzle-record .ul .li .record-text .record{color: #333; font-weight: 600; font-size:28rpx;}
.puzzle-btn{position: fixed; left: 0; right: 0; bottom: 0; background: #fff; padding:15rpx;border-top: 1px #eee solid; z-index: 2}
.puzzle-btn .invite-btn{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1; font-size: 26rpx; color: #fff; background: #EC5464; border-radius: 8rpx;border:1px #EC5464 solid; height: 70rpx;}
